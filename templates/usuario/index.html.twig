{% extends 'base.html.twig' %}

{% block title %}Hello Usuario!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<form action="{{ path('app_usuario') }}" method="post" >
      <div class="row mb-3" top="50px"> 
        <label for="username">Email:</label>
        <div class="col-sm-10">
          <input type="text" id="username" name="_username" value="{{ last_username }}">
        </div>
      </div>
      <div class="row mb-3">
        <label for="password">Password:</label>
        <div class="col-sm-10">
          <input type="password" id="password" name="_password">
        </div>
        
      </div>
    {#If you want to control the URL the user is redirected to on success
    <input type="hidden" name="_target_path" value="/inicio">#}

        <button value="{{ path('app_inicio') }}" type="submit">login</button>
    </form>
{% endblock %}
